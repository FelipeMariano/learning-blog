<div id="page_wrapper">
	<h3><strong>Nova postagem:</strong></h3>

	<%= form_for :post, url: posts_path do |f| %>
		<% if @post.errors.any? %>
			<h3 style="color: red;"><%= pluralize(@post.errors.count, "erro") %> encontrados</h3>
			<ul>
				<% @post.errors.full_messages.each do |erro| %>
					<li><%= erro %></li>
				<% end %>
			</ul>
		<% end %>
		<p>
			<%= f.label 'TÃ­tulo' %><br>
			<%= f.text_field :title %>
		</p>
		<p>
			<%= f.label 'Texto' %><br>
			<%= f.text_area :body %>
		</p>
		<%= f.submit 'Salvar' %>
	<% end %>
</div>